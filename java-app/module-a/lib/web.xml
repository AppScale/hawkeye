<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
           version="2.5">

    <servlet>
        <servlet-name>GetVersionDetailsHandlerServlet</servlet-name>
        <servlet-class>com.appscale.hawkeye.modules.GetVersionDetailsHandlerServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetEntityHandlerServlet</servlet-name>
        <servlet-class>com.appscale.hawkeye.modules.GetEntityHandlerServlet
        </servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateEntityHandlerServlet</servlet-name>
        <servlet-class>com.appscale.hawkeye.modules.CreateEntityHandlerServlet
        </servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>GetVersionDetailsHandlerServlet</servlet-name>
        <url-pattern>/modules/versions-details</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetEntityHandlerServlet</servlet-name>
        <url-pattern>/modules/get-entity</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetEntityHandlerServlet</servlet-name>
        <url-pattern>/modules/get-entities</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateEntityHandlerServlet</servlet-name>
        <url-pattern>/modules/create-entity</url-pattern>
    </servlet-mapping>
</web-app>
